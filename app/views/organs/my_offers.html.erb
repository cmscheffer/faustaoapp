<div class="container">
  <h1>MY OFFERS</h1>
  <div class="cards row justify-content-center">
    <% @organs.each do |organ| %>
      <div class="mb-3" style="width:400px">
        <div class="card">
          <%= image_tag organ.img_url, class: "card-img-top" %>
            <div class="card-body">
              <h4 class="card-title"><%= organ.name %></h4>
              <p class="card-text"><%= organ.description %></p>
              <p>Age: <%= organ.age %></p>
              <p>Bloody type: <%= organ.robot_type %></p>
              <div class="d-flex justify-content-between align-items-center mt-3">
                <p style="font-weight: 600; font-size: 1.2rem;">â‚¬<%= organ.price%></p>
              </div>
              <div>
                <%= link_to "Edit Organ", edit_organ_path(organ), class: "btn btn-primary" %>
                <%= link_to "Delete Organ", organ_path(organ), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
