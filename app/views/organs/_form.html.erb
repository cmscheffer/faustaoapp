<div class="container">
  <div>
    <%= simple_form_for @organ do |f| %>
      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price, as: :decimal %>
        <%= f.input :age, as: :integer %>
        <%= f.input :robot_type, collection: Organ::ROBOT_TYPE %>
        <%= f.input :photo, as: :file %>
      </div>
      <% if current_page?(new_organ_path) %>
        <%= f.submit "Create Offer", class: "btn btn-primary", style: "width: 374.39px" %>
      <% else %>
        <%= f.submit "Update Offer", class: "btn btn-primary", style: "width: 374.39px" %>
      <% end %>
    <% end %>
  </div>

</div>
