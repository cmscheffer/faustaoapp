<h1>Orders</h1>
<%= link_to 'New Order', new_order_path %>

<ul>
  <% @orders.each do |order| %>
    <li>
      <%= link_to order.id, order_path(order) %> |
      <%= link_to 'Edit', edit_order_path(order) %> |
      <%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
